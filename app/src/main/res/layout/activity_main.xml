<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="41dp"
        android:text="Enter Your Second Number"
        app:layout_constraintBottom_toTopOf="@+id/secondNumEntry"
        app:layout_constraintEnd_toEndOf="@+id/secondNumEntry"
        app:layout_constraintTop_toBottomOf="@+id/firstNumEntry" />

    <Spinner
        android:id="@+id/islem"
        android:layout_width="210dp"
        android:layout_height="59dp"
        android:layout_marginBottom="19dp"
        android:textAlignment="center"
        android:textDirection="firstStrongRtl"
        app:layout_constraintBottom_toTopOf="@+id/submitButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="17dp"
        android:text="Enter Your First Number"
        app:layout_constraintBottom_toTopOf="@+id/firstNumEntry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="152dp"
        android:layout_height="52dp"
        android:layout_marginBottom="161dp"
        android:text="Calculate"
        android:textColorLink="#090909"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/islem" />

    <EditText
        android:id="@+id/secondNumEntry"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="333dp"
        android:layout_height="51dp"
        android:layout_marginBottom="37dp"
        android:ems="10"
        android:hint="Enter Here "
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/firstNumEntry"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="351dp"
        android:layout_height="58dp"
        android:layout_marginBottom="60dp"
        android:ems="10"
        android:hint="Enter Here "
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="30dp"
        android:text="Enter Your Operation "
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/islem"
        app:layout_constraintEnd_toEndOf="@+id/islem"
        app:layout_constraintTop_toBottomOf="@+id/secondNumEntry" />

</androidx.constraintlayout.widget.ConstraintLayout>